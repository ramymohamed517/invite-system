  <!-- ✅ سكريبت لتحديث البيانات -->
  <script>
    // Firebase configuration
    const firebaseConfig = {
      apiKey: "YOUR_API_KEY",
      authDomain: "YOUR_AUTH_DOMAIN",
      databaseURL: "YOUR_DATABASE_URL",
      projectId: "YOUR_PROJECT_ID",
      storageBucket: "YOUR_STORAGE_BUCKET",
      messagingSenderId: "YOUR_MESSAGING_SENDER_ID",
      appId: "YOUR_APP_ID"
    };

    // Initialize Firebase
    firebase.initializeApp(firebaseConfig);
    const database = firebase.database();

    // Simulated user data - in a real app, you'd get this from Firebase Auth
    const currentUserId = "user123"; // Replace with actual user ID
    
    // Current selected product
    let selectedProduct = null;
    
    // User balance
    let userBalance = 0;

    // Update user balance from Firebase
    function updateUserBalance() {
      database.ref('users/' + currentUserId + '/balance').once('value').then((snapshot) => {
        userBalance = snapshot.val() || 0;
        document.getElementById("user-balance").textContent = userBalance.toFixed(2) + " ج.م";
      });
    }

    // Initialize the page
    document.addEventListener('DOMContentLoaded', function() {
      updateUserBalance();
      
      // Add event listeners to all buy buttons
      const buyButtons = document.querySelectorAll('.buy-btn');
      buyButtons.forEach(button => {
        button.addEventListener('click', function() {
          const productCard = this.closest('.product-card');
          selectedProduct = {
            id: productCard.dataset.id,
            name: productCard.querySelector('h3').textContent,
            price: parseFloat(productCard.dataset.price),
            dailyProfit: parseFloat(productCard.dataset.daily),
            days: parseInt(productCard.dataset.days),
            totalProfit: parseFloat(productCard.dataset.total)
          };
          
          // Show modal with product info
          document.getElementById('modalProductInfo').textContent = selectedProduct.name;
          document.getElementById('modalProductPrice').textContent = selectedProduct.price.toFixed(2);
          document.getElementById('modalCurrentBalance').textContent = userBalance.toFixed(2);
          document.getElementById('purchaseModal').style.display = 'flex';
        });
      });
      
      // Confirm purchase button
      document.getElementById('confirmPurchase').addEventListener('click', function() {
        if (userBalance >= selectedProduct.price) {
          // Process purchase
          const newBalance = userBalance - selectedProduct.price;
          
          // Update balance in Firebase
          database.ref('users/' + currentUserId).update({
            balance: newBalance
          }).then(() => {
            // Add to user's products
            const userProductRef = database.ref('userProducts/' + currentUserId).push();
            userProductRef.set({
              productId: selectedProduct.id,
              productName: selectedProduct.name,
              purchaseDate: new Date().toISOString(),
              dailyProfit: selectedProduct.dailyProfit,
              daysRemaining: selectedProduct.days,
              totalProfit: selectedProduct.totalProfit
            }).then(() => {
              // Show success message
              document.getElementById('purchaseModal').style.display = 'none';
              document.getElementById('successAlert').style.display = 'block';
              setTimeout(() => {
                document.getElementById('successAlert').style.display = 'none';
              }, 3000);
              
              // Update local balance
              userBalance = newBalance;
              document.getElementById("user-balance").textContent = userBalance.toFixed(2) + " ج.م";
            });
          });
        } else {
          // Show insufficient balance alert
          document.getElementById('purchaseModal').style.display = 'none';
          document.getElementById('insufficientBalanceAlert').style.display = 'block';
          setTimeout(() => {
            document.getElementById('insufficientBalanceAlert').style.display = 'none';
          }, 3000);
        }
      });
      
      // Cancel purchase button
      document.getElementById('cancelPurchase').addEventListener('click', function() {
        document.getElementById('purchaseModal').style.display = 'none';
        selectedProduct = null;
      });
    });

    // Sample data - replace with actual data from Firebase
    const totalProducts = 6;
    const todayIncome = 0;

    document.getElementById("product-count").textContent = totalProducts;
    document.getElementById("daily-income").textContent = todayIncome.toFixed(2) + " ج.م";
  </script>

</body>
</html>







































